{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    },
    {
      "src": "^/(?!api/|public/).*$",
      "dest": "public/index.html"
    }
  ],
  "env": {
    "JWT_SECRET": "@jwt_secret"
  }
}
